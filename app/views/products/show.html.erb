<h2>Product Details</h2>

<div class="product">

<h2> <%= @product.name %></h2>
<p><strong>Country of origin:</strong> <%= @product.country_origin %></p>
  <p><strong>Price:</strong> <%= number_to_currency @product.cost %></p>
  <p><strong>Total reviews:</strong> <%= @product.reviews.length %></p>
  <p><%= link_to "Review", edit_product_path(@product) %> | <%= link_to "Edit", edit_product_path(@product) %> |  <%= link_to "Delete", product_path(@product) %></p>
  <br>
  <h2>Product Reviews</h2>
  <% @product.reviews.each do |review| %>
    <div class="review">
      <p><strong>Author:</strong> <%= review.author %></p>
      <p><strong>Review:</strong> <%= review.content_body %></p>
      <p><strong>Rating:</strong> <%= review.rating %>/5 Stars</p>
      <%= link_to "Delete", product_review_path(@product, review) %>
    </div>
  <% end %>



</div>
